<a class="no-style" href="{{bill.last_version.urls.pdf}}">
  <form class="">
    {{#if bill.short_title}}
      <div class="form-group">
        <h2>{{billNumberSplit bill.bill_id}} {{bill.short_title}}</h2>
      </div>
      <div class="form-group">
        <h4>{{bill.official_title}}</h4>
      </div>
      <hr>
    {{else}}
      <div class="form-group">
        <h2>{{billNumberSplit bill.bill_id}} {{bill.official_title}}</h2>
      </div>
      <hr>
    {{/if}}
  </form>
</a>
