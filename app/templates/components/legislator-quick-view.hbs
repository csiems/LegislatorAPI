
<h2 {{action 'showQuickView'}} class="finger">{{legislator.title}}. {{legislator.first_name}} {{legislator.last_name}} ({{legislator.party}}) <span class="{{glyphicon-view isQuickViewShowing}}" aria-hidden="true" ></span></h2>
{{#if isQuickViewShowing}}
  <form class="">
    <div class="form-group">
      <p><strong>Contact Form:</strong> <a class="no-style" href="{{legislator.contact_form}}">{{legislator.contact_form}}</a></p>
    </div>
    <div class="form-group">
      <p><strong>Phone:</strong> {{legislator.phone}}</p>
    </div>
    <div class="form-group">
      <p><strong>Email:</strong> {{legislator.oc_email}}</p>
    </div>
    <div class="form-group">
      <p><strong>Office Address:</strong> {{legislator.office}}</p>
    </div>
    <div class="form-group">
      <p><strong>Term Ending:</strong> {{moment-format legislator.term_end}} (<strong>{{moment-from-now legislator.term_end}}</strong>)</p>
    </div>
  </form>
  {{#link-to 'legislator-committees' legislator.bioguide_id class="oswald"}}Find out more about {{legislator.first_name}} {{legislator.last_name}}'s committees {{/link-to}}
  {{#link-to 'legislator-bills' legislator.bioguide_id class="oswald"}}Find out more about {{legislator.first_name}} {{legislator.last_name}}'s bills {{/link-to}}

{{/if}}
